{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./projects",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@chat/store": [
        "lib-domain/src/public-api.ts"
      ],
      "@chat/shared": [
        "lib-shared/src/public-api.ts"
      ],
      "@chat/model": [
        "lib-model/src/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}